        // Open modal when clicking on portfolio items
        portfolioItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const projectId = item.querySelector('.uniform-shadow-hover').getAttribute('data-project-id');
                
                if (projectId && projectData[projectId]) {
                    // Show loading indicator
                    loadingIndicator.style.display = 'flex';
                    
                    // Add a slight delay to show the loading animation
                    setTimeout(() => {
                        // Clear and set images
                        modalGallery.innerHTML = '';
                        projectData[projectId].images.forEach((image, index) => {
                            const imgElement = document.createElement('img');
                            imgElement.src = image;
                            imgElement.alt = `${projectData[projectId].title} - 图片 ${index + 1}`;
                            imgElement.className = 'waterfall-image';
                            modalGallery.appendChild(imgElement);
                            
                            // Add fade-in animation for images
                            setTimeout(() => {
                                imgElement.classList.add('visible');
                            }, 100 * index);
                        });
                        
                        // Hide loading indicator
                        loadingIndicator.style.display = 'none';
                        
                        // Show modal
                        modal.classList.add('active');
                        document.body.classList.add('modal-open');
                        
                        // Focus on the first image
                        const firstImage = modalGallery.querySelector('.waterfall-image');
                        if (firstImage) {
                            firstImage.scrollIntoView({ behavior: 'smooth' });
                        }
                    }, 300);
                }
            });
        });
        
        // ... 前面的代码 ...

// Close modal
modalClose.addEventListener('click', () => {
    modal.classList.remove('active');
    document.body.classList.remove('modal-open');
});

// Close modal when clicking anywhere on the modal background
modal.addEventListener('click', (e) => {
    // 直接检查点击的是否是背景元素
    if (e.target.classList.contains('waterfall-modal')) {
        modal.classList.remove('active');
        document.body.classList.remove('modal-open');
    }
});

// 阻止内容区域的点击事件冒泡
modalContainer.addEventListener('click', (e) => {
    e.stopPropagation();
});

// Prevent closing when clicking inside the container
const modalContainer = document.querySelector('.waterfall-container');
modalContainer.addEventListener('click', (e) => {
    e.stopPropagation(); // 阻止事件冒泡
});

// ... 后面的代码 ...
        
        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (modal.classList.contains('active')) {
                if (e.key === 'Escape') {
                    modal.classList.remove('active');
                    document.body.classList.remove('modal-open');
                } else if (e.key === 'ArrowUp') {
                    // Scroll up
                    window.scrollBy({ top: -300, behavior: 'smooth' });
                } else if (e.key === 'ArrowDown') {
                    // Scroll down
                    window.scrollBy({ top: 300, behavior: 'smooth' });
                }
            }
        });
        
        // Smooth scrolling for modal gallery
        modalContainer.classList.add('smooth-scroll');
        
        // Add scrollbar styling for gallery
        modalContainer.classList.add('scrollbar-hide');
        
        // Lazy loading for images in modal
        const waterfallImages = document.querySelectorAll('.waterfall-image');
        
        const imageObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const img = entry.target;
                    // Add fade-in animation when image comes into view
                    img.classList.add('visible');
                    imageObserver.unobserve(img);
                }
            });
        }, { threshold: 0.1 });
        
        // Initialize the observer when modal is opened
        modal.addEventListener('transitionend', () => {
            if (modal.classList.contains('active')) {
                document.querySelectorAll('.waterfall-image').forEach(img => {
                    imageObserver.observe(img);
                });
                
                // Add scroll event listener for progress bar
                modalContainer.addEventListener('scroll', updateProgressBar);
                
                // Initialize progress bar
                updateProgressBar();
            } else {
                // Remove scroll event listener when modal is closed
                modalContainer.removeEventListener('scroll', updateProgressBar);
            }
        });
        
        // Update progress bar based on scroll position
        function updateProgressBar() {
            const scrollTop = modalContainer.scrollTop;
            const scrollHeight = modalContainer.scrollHeight - modalContainer.clientHeight;
            const scrollPercentage = (scrollTop / scrollHeight) * 100;
            
            if (progressBarElement) {
                progressBarElement.style.height = `${scrollPercentage}%`;
            }
        }
        
        // Mouse wheel scrolling for desktop
        modalContainer.addEventListener('wheel', (e) => {
            e.preventDefault();
            modalContainer.scrollBy({
                left: 0,
                top: e.deltaY < 0 ? -100 : 100,
                behavior: 'smooth'
            });
        });
        
        // Touch swipe functionality for mobile
        let touchStartY = 0;
        let touchEndY = 0;
        
        modalContainer.addEventListener('touchstart', (e) => {
                touchStartY = e.touches[0].clientY;
        }, { passive: true });
        
        modalContainer.addEventListener('touchmove', (e) => {
                touchEndY = e.touches[0].clientY;
        }, { passive: true });
        
        modalContainer.addEventListener('touchend', () => {
            const distance = touchStartY - touchEndY;
            const isScrollable = modalContainer.scrollHeight > modalContainer.clientHeight;
            
            if (isScrollable) {
                if (distance > 50) {
                    // Swipe up
                    modalContainer.scrollBy({ top: 300, behavior: 'smooth' });
                } else if (distance < -50) {
                    // Swipe down
                    modalContainer.scrollBy({ top: -300, behavior: 'smooth' });
                }
            }
        });
    </script>

  <!-- 你的HTML内容 -->
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
        const waterfallContainer = document.querySelector('.waterfall-container');
        if (waterfallContainer) {
            waterfallContainer.addEventListener('wheel', function(e) {
                e.preventDefault();
                const scrollAmount = e.deltaY * 3;
                this.scrollTop += scrollAmount;
            });
        }
    });
  </script>

    
    </body></html>
