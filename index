    <script>
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
        
        // Navbar scroll effect
        const navbar = document.getElementById('navbar');
        
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('shadow-md');
                navbar.classList.remove('py-4');
                navbar.classList.add('py-2');
            } else {
                navbar.classList.remove('shadow-md');
                navbar.classList.add('py-4');
                navbar.classList.remove('py-2');
            }
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    // Close mobile menu if open
                    if (!mobileMenu.classList.contains('hidden')) {
                        mobileMenu.classList.add('hidden');
                    }
                    
                    // Scroll to target
                    // 添加小屏幕下的偏移量适配
const offset = window.innerWidth < 768 ? 60 : 80;
window.scrollTo({
    top: targetElement.offsetTop - offset,
    behavior: 'smooth'
});
                }
            });
        });
        
        // Intersection Observer for animations
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const element = entry.target;
                    const animation = element.getAttribute('data-animation');
                    
                    if (animation) {
                        element.classList.add(`animate-${animation}`);
                    }
                    
                    observer.unobserve(element);
                }
            });
        }, observerOptions);
        
        // Add animation classes to elements
        document.querySelectorAll('[data-animation]').forEach(element => {
            observer.observe(element);
        });
        
        // Portfolio filter functionality
        const filterButtons = document.querySelectorAll('.filter-buttons button');
        
        filterButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all buttons
                filterButtons.forEach(btn => {
                    btn.classList.remove('portfolio-filter-active');
                    btn.classList.add('bg-white', 'text-dark-700');
                });
                
                // Add active class to clicked button
                this.classList.add('portfolio-filter-active');
                this.classList.remove('bg-white', 'text-dark-700');
                
                // Here you would normally filter the portfolio items
                // For this demo, we'll just show all items
                const portfolioItems = document.querySelectorAll('.portfolio-item');
                portfolioItems.forEach(item => {
                    item.style.display = 'block';
                });
            });
        });
        
        // Fix for button click bug
        document.querySelectorAll('.btn-primary, .btn-secondary').forEach(button => {
            button.addEventListener('click', function(e) {
                // Prevent default behavior if button is not a form submit button
                if (!this.hasAttribute('type') || this.getAttribute('type') !== 'submit') {
                    e.preventDefault();
                }
                
                // Add a brief scale animation to indicate click
                this.classList.add('scale-95');
                setTimeout(() => {
                    this.classList.remove('scale-95');
                }, 150);
            });
        });
        
        // Add more complex animations for scroll effects
        const animateOnScrollElements = document.querySelectorAll('.animate-on-scroll');
        
        const scrollObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                    scrollObserver.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });
        
        animateOnScrollElements.forEach(element => {
            scrollObserver.observe(element);
        });
        
        // Add micro-interactions for portfolio items
        const portfolioItems = document.querySelectorAll('.portfolio-item');
        
        portfolioItems.forEach(item => {
            item.addEventListener('mouseenter', () => {
                // Add subtle rotation effect on hover
                item.style.transform = 'translateY(-8px) scale(1.02) rotate(0.5deg)';
            });
            
            item.addEventListener('mouseleave', () => {
                // Reset rotation on mouse leave
                item.style.transform = 'translateY(-8px) scale(1.02) rotate(0deg)';
            });
        });
        
        // Add scroll progress indicator
        const progressBar = document.createElement('div');
        progressBar.classList.add('fixed', 'top-0', 'left-0', 'h-1', 'bg-primary', 'z-50');
        document.body.appendChild(progressBar);
        
        window.addEventListener('scroll', () => {
            const scrollTop = window.scrollY;
            const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;
            const scrollPercentage = (scrollTop / scrollHeight) * 100;
            progressBar.style.width = `${scrollPercentage}%`;
        });
        
        // Add typewriter effect for hero section
        const typewriterElement = document.querySelector('.text-gradient');
        const text = typewriterElement.textContent;
        let i = 0;
        
        typewriterElement.textContent = '';
        
        function typeWriter() {
            if (i < text.length) {
                typewriterElement.textContent += text.charAt(i);
                i++;
                setTimeout(typeWriter, 100);
            }
        }
        
        // Start typewriter effect after a delay
        setTimeout(typeWriter, 1000);
        
        // Portfolio modal functionality
        const modal = document.getElementById('waterfall-modal');
        const modalGallery = document.getElementById('waterfall-gallery');
        const modalClose = document.getElementById('waterfall-close');
        const loadingIndicator = document.getElementById('loading-indicator');
        const progressBarElement = document.getElementById('progress-bar');
        
        // Project data
        const projectData = {
            1: {
                title: "品牌设计",
                description: "为现代健康生活方式设计的移动应用，帮助用户追踪日常活动、健康指标和设定健身目标。设计注重简洁直观的用户界面，让用户轻松记录和查看健康数据。",
                tags: ["UI设计", "平面设计", "视频拍摄"],
                images: [
                   "https://i.postimg.cc/hGtYqC9P/1.jpg",    
                   "https://i.postimg.cc/9FwNmRRZ/2.jpg",    
